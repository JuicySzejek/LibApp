@model LibApp.Models.User

@{
    ViewBag.Title = Model.Name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>
<ul>
    @if ((User.IsInRole("owner")))
    {
        <a asp-controller="Customers" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-danger delete-btn">Edit</a>
    }
    <li>Discount rate: @Model.MembershipType.DiscountRate</li>
    @if (Model.Birthdate.HasValue)
    {
        <li>Birthdate: @Model.Birthdate.Value.ToShortDateString()</li>
    }
</ul>